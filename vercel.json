{
  "buildCommand": "cd client && NODE_ENV=development npm install && npm run build",
  "outputDirectory": "client/dist",
  "installCommand": "echo 'Skipping root install'",
  "functions": {
    "api/*.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api"
    },
    {
      "source": "/uploads/:path*",
      "destination": "/api"
    }
  ]
}
